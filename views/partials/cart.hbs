<div class="card-body">
                    <!-- PRODUCT -->
    {{# if products}}
    {{# each products}}
        <div class="product">
            <div class="row">
                <div class="col-12 col-sm-12 col-md-2 text-center">
                    <img class="img-fluid img p img-responsive" alt="{{this.sort}}" data-img="_1.jpg" data-id="{{this.id}}" width="120" height="80">
                </div>
                <div class="col-12 text-sm-center col-sm-12 text-md-left col-md-6">
                <h4 class="product-name">
                    <a href="/product/{{this.sort}}" class="card-link">
                        <strong>{{this.sort}}</strong>
                    </a>
                </h4>
                </div>
                <div class="col-12 col-sm-12 text-sm-center col-md-4 text-md-right row">
                    <div class="col-3 col-sm-3 col-md-6 text-md-right" style="padding-top: 5px">
                        <h6><strong>{{this.cost}} <span class="text-muted">руб</span></strong></h6>
                    </div>

                    <div class="col-3 col-sm-3 col-md-3">
                        <a href="/add/{{this.id}}" class="btn btn-outline-success btn-xs">
                            <i class="fas fa-cart-plus" aria-hidden="true"></i>
                        </a> 
                    <p></p> 
                        <a href="/reduce/{{this.id}}" class="btn btn-outline-danger btn-xs">
                            <i class="fa fa-trash" aria-hidden="true"></i>
                        </a>
                                                        
                    </div>
                    <div class="col-1 col-sm-1 col-md-1">
                    <p>Кол-во:<b> {{qty}}</b></p> 
                                                        
                    </div>
                    
                </div>
            </div>
            <hr>
        {{/each}}
            <nav class="navbar navbar-light bg-light justify-content-between">
                <div class="pull-left" style="margin: 10px">
                    <a href="/clear" class="btn btn-outline-danger find" style="margin-top: 5px;">Очистить корзину</a>
                </div>

                <div class="pull-right" style="margin: 10px">
                    <div class="pull-right" style="margin: 5px">
                        Всего:<b> {{totalQty}}</b>
                        Итог:<b> {{totalCost}} руб</b>
                    </div>

                    <a href="" class="btn btn-outline-success pull-right">Оформить заказ</a>
                </div>            
            </nav>
            </div>
        </div>
    {{else}}
    <div class="withoutProduct">
        <div class="row">
            <div class="col-12 col-sm-12 col-md-12 col-lg-12 text-center">
                    <h3>Корзина пустая</h3>
                    <p class="text-uppercase"><strong>Назад к</strong>
                        <a href="/all" class="text-primary">шоппингу</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
    {{/if}}
            

</div>